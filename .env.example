# MVMemory Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
MVMEMORY_DB=~/.mvmemory/db/mvmemory.db
MVMEMORY_CACHE_DIR=~/.mvmemory/cache

# Performance Settings
MVMEMORY_CACHE_SIZE=2000
MVMEMORY_MAX_TOKENS=100000
MVMEMORY_WORKERS=4
MVMEMORY_MAX_FILE_SIZE=10MB
MVMEMORY_BATCH_SIZE=10

# Indexing Settings
MVMEMORY_AUTO_INDEX=true
MVMEMORY_WATCH_FILES=true
MVMEMORY_DEBOUNCE_DELAY=1000

# Logging Configuration
MVMEMORY_LOG_LEVEL=info
MVMEMORY_LOG_FILE=~/.mvmemory/logs/mvmemory.log

# Python Configuration
PYTHONPATH=~/.mvmemory/venv/bin/python
MVMEMORY_PYTHON_ENV=~/.mvmemory/venv

# Model Configuration
MVMEMORY_MODEL_NAME=nomic-ai/nomic-embed-text-v1.5
MVMEMORY_MODEL_CACHE_DIR=~/.mvmemory/models

# Token Optimization
MVMEMORY_COMPRESSION_RATIO=0.3
MVMEMORY_PRESERVE_STRUCTURE=true
MVMEMORY_INCLUDE_METADATA=true

# Docker Configuration (for containerized deployment)
DATA_PATH=./data
PROJECTS_PATH=./projects
MVMEMORY_PORT=7777

# Development Settings
NODE_ENV=production